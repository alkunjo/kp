<div class="container" style="max-width:400px">
<%= form_for([@dtran.transaksi, @dtran], remote: true) do |f| %>
  <% if @dtran.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dtran.errors.count, "error") %> prohibited this dtran from being saved:</h2>

      <ul>
      <% @dtran.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-4">
      <%= f.label :kuantitas_beri %><br>
      <%= f.text_field :dtd_qty, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.label :alasan %>
      <%= f.text_field :dt_rsn, class: "form-control" %>
    </div>
    <div class="col-sm-2" style="margin-top:25px;margin-right:10px">
      <%= f.submit "Tambah", class: "btn btn-sm btn-primary" %>
    </div>
    <div class="col-sm-2" style="margin-top:25px">
      <button class="btn btn-sm btn-danger" onclick="">Batal</button>
    </div>
  </div>
<% end %>
</div>
