<div style="max-width:800px; margin-left:10px" id="dta_index">
  <br>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <button class="close" data-dismiss="alert" aria-label="close">&times;</button>
      <%= value %>
    </div>
  <% end %>

  <div id="dta_form"></div>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Obat</th>
        <th>Permintaan</th>
        <th>Stok Gudang</th>
        <th>Pemberian</th>
        <th>Alasan</th>
        <% if @transaksi.asked? %>
        <th colspan="3">Aksi</th>
        <% end %>
      </tr>
    </thead>

    <tbody id="dta_tbl">
      <%= render partial: "dtrans/drop2" %>
    </tbody>
  </table>
  
</div>