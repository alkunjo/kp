<p id="notice"><%= notice %></p>

<h3 align="center"><b>Daftar Generik Obat</b></h3>

<% if can? :manage, Generik %>
  <div id="form" style="max-width:400px; min-height:100px">
    <%= render 'form' %>
  </div>
  <%= form_tag import_generiks_path, multipart: true do %>
    <div class="col-md-3"><b>Import Generik</b></div>
    <div class="col-md-4">
      <%= file_field_tag :file, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= submit_tag "Submit", class: "btn btn-sm btn-primary" %>
    </div> 
  <% end %>
<% end %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th style="text-align:center">Nama</th>
      <% if can? :manage, Generik%>
      <th style="text-align:center">Aksi</th>
      <% end %>
    </tr>
  </thead>

  <tbody id="tabelGenerik" class="isiGenerik">
    <%= render 'index' %>
  </tbody>
</table>
<div align="center">
  <%= will_paginate @generiks, renderer: BootstrapPagination::Rails %>
</div>
<div class="modal fade" id="generikModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog"style="width:450px">
    <div class="modal-content">
      <div class="modal-header" align="center">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-isi"></div>
    </div>
  </div>
</div>