<%= form_for @position, remote: true, html: {style: "display:inline;"} do |f| %>

    <% if @position.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@position.errors.count, "error") %> prohibited this position obat from being saved:</h2>

        <ul>
        <% @position.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-4" style="padding-top:20px">
        <%= f.label :nama_posisi, class: "control-label" %><br>
      </div>
      <div class="col-md-5" style="padding-top:20px">
        <%= f.text_field :position_name, class: "form-control" %>
      </div>
      <div class="col-md-2" style="padding-top:20px">
        <%= f.submit (f.object.new_record? ? "Tambah" : "Ubah"), class: "btn btn-sm btn-primary" %>
      </div>
      <div class="col-md-1" style="padding-top:20px">
        <%= link_to "Batal", new_position_path, class: "btn btn-sm btn-default", remote: true %>
      </div>
    </div>
<% end %>
