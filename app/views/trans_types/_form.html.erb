<%= form_for @ttype, remote: true, html: {style: "display:inline;"} do |f| %>
    <% if @ttype.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@ttype.errors.count, "error") %> prohibited this jenis obat from being saved:</h2>

        <ul>
        <% @ttype.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-md-3">
        <%= f.label :tipe_transaksi, class: "control-label" %><br>
