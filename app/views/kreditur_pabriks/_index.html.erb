<div style="max-width:425px; margin-left:10px">
  <p id="notice"><%= notice %></p>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Kreditur</th>
        <th colspan="3">Aksi</th>
      </tr>
    </thead>

    <tbody>
      <% @pabrik.kreditur_pabriks.each do |kreditur_pabrik| %>
        <tr>
          <td><%= Kreditur.find(kreditur_pabrik.kreditur_id).kreditur_name  %></td>
          <td><%= link_to [kreditur_pabrik.pabrik, kreditur_pabrik], method: :delete, :class => "btn btn-danger btn-sm", remote: true do %><span class="fa fa-trash-o"></span> Hapus<% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>