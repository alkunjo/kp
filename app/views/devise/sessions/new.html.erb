<div>
  <br>
  <%= image_tag("logo.png", size: "125x50") %><br><br>
  <h4>Log in User</h4>
  <% if notice %>
  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
  <% end %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.text_field :user_username, autofocus: true, placeholder: "username", class: "form-control", style: "max-width:200px" %><br>
      <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "form-control", style: "max-width:200px" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Login", class: "btn btn-default" %>
    </div>
  <% end %>
</div>
