<%= form_for @role, remote: true, html: {style: "display:inline;"} do |f| %>

    <% if @role.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role obat from being saved:</h2>

        <ul>
        <% @role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-4" style="padding-top:20px">
        <%= f.label :nama_role, class: "control-label" %>
      </div>
      <div class="col-md-5" style="padding-top:20px">
        <%= f.text_field :role_name, class: "form-control" %>
      </div>
      <div class="col-md-2" style="padding-top:20px">
        <%= f.submit (f.object.new_record? ? "Tambah" : "Ubah"), class: "btn btn-sm btn-primary" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.label :deskripsi_role, class: "control-label" %>
      </div>
      <div class="col-md-5">
        <%= f.text_area :role_desc, class: "form-control" %>
      </div>
      <div class="col-md-2" style="padding-top:20px">
        <%= link_to "Batal", new_role_path, class: "btn btn-sm btn-default", remote: true %>
      </div>
    </div>
<% end %>
