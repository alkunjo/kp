<p id="notice"><%= notice %></p>

<h3 align="center"><b>Master Obat</b></h3><br/><br/>

<div id="form" style="max-width:1000px; min-height:100px">
  <%= render 'form' %>
</div>

<table class="table table-striped table-bordered" data-toggle="table">
  <thead>
    <tr align="center">
      <th style="text-align:center" data-sortable="true">Nama</th>
      <th style="text-align:center" data-sortable="true">Stok Minim</th>
      <th style="text-align:center" data-sortable="true">HPP (Rp)</th>
      <th style="text-align:center" data-sortable="true">HNA (Rp)</th>
      <th style="text-align:center" data-sortable="true">HN Askes (Rp)</th>
      <th style="text-align:center" data-sortable="true">HJA (Rp)</th>
      <th colspan="2" style="text-align:center">Aksi</th>
    </tr>
  </thead>

  <tbody id="tabelObat" class="isiObat">
    <%= render 'index' %>
  </tbody>
</table>
<div class="modal fade" id="obatModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog"style="width:450px">
    <div class="modal-content">
      <div class="modal-header" align="center">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-isi"></div>
    </div>
  </div>
</div>