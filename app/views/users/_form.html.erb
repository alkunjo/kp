<%= form_for @user, remote: true, html: {style: "display:inline;"} do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this tipe user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :nama_user, class: "control-label" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :user_name, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :username, class: "control-label" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :user_username, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <%= f.label :alamat, class: "control-label" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :user_address, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :telepon, class: "control-label" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :user_phone, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <%= f.label :email, class: "control-label" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :password, class: "control-label" %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password, class: "form-control", placeholder: "Kosongkan bila tidak diisi" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <%= f.label :role, class: "control-label" %>
        </div>
        <div class="col-md-2">
          <%= f.collection_select :role_id, @roles, :id, :role_name, {prompt: "Pilih satu"}, {class: "form-control"} %>
        </div>
        <div class="col-md-2">
          <%= f.label :posisi, class: "control-label" %>
        </div>
        <div class="col-md-2">
          <%= f.collection_select :position_id, @positions, :id, :position_name, {prompt: "Pilih satu"}, {class: "form-control"} %>
        </div>
        <div class="col-md-2">
          <%= f.label :outlet, class: "control-label" %>
        </div>
        <div class="col-md-2">
          <%= f.collection_select :outlet_id, @outlets, :id, :outlet_name, {prompt: "Pilih satu"}, {class: "form-control"} %>
        </div>
      </div>

      <div class="row">

        <div class="col-md-6">
          <%= f.submit (f.object.new_record? ? "Tambah" : "Ubah"), class: "btn btn-sm btn-primary" %>
        </div>
        <div class="col-md-6">
          <%= link_to 'Batal', new_user_path, class: "btn btn-sm btn-default", remote: true %>
        </div>
      </div>     
    </div>
<% end %>